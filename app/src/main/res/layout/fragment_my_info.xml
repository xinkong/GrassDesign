<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.grass.grass.ui.my.MyInfoFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/headPic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col333"
                android:textSize="@dimen/length16"
                android:layout_marginTop="10dp"
                android:text=""/>

        </LinearLayout>

    <com.grass.grass.view.MyPressView
        android:id="@+id/cacheSize"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/length10"
        android:text=""
        android:textColor="#ffffff"
        app:mPressBackGoroundColor="@color/colorPrimary"
        app:mPressBackGoroundColorSelected="#3C3779"/>

    <com.grass.grass.view.MyPressView
        android:id="@+id/exitLogin"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/length10"
        android:text="退出登录"
        android:textColor="#ffffff"
        app:mPressBackGoroundColor="@color/colorPrimary"
        app:mPressBackGoroundColorSelected="#3C3779"/>


</LinearLayout>
